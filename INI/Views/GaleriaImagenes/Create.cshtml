@model INI.Models.DataBase.tblGaleriaImagenes

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_InvEditor.cshtml";
}
<link href="~/Content/tooltip.css" rel="stylesheet" />
<script src="~/Scripts/tooltip.js"></script>
<div class="divMetas">
    <p>
        <h2>
            Crear Imagen.
        </h2>
    </p>



    @using (Html.BeginForm("Create", "GaleriaImagenes", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <hr />
        @Html.ValidationSummary(true)

        <table>
            <tr>
                <td>
                    
                    

                        <div style="margin: auto; width: auto;">

                            <strong onmouseover="tooltip.pop(this, '#Titulo', { sticky: true })">
                                Titulo
                            </strong>

                            <div style="display:none;">
                                <div id="Titulo">
                                    <img src="~/images/ToolTip/p4.svg" style="float:right;margin-left:12px;" alt="" />
                                    <b><strong>Cual es tu Titulo?</strong></b><br /><br />
                                    Este campo es obligatorio. Aquí debes ingresar un titulo.
                                </div>
                            </div>
                        </div>
                    


                </td>
                <td>
                    <div class="input-control text size4">
                        @Html.EditorFor(model => model.Imagen_titulo)
                        @Html.ValidationMessageFor(model => model.Imagen_titulo)
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    
                    <div style="margin: auto; width: auto;">

                        <strong onmouseover="tooltip.pop(this, '#Descripcion', { sticky: true })">
                            Descripción
                        </strong>

                        <div style="display:none;">
                            <div id="Descripcion">
                                <img src="~/images/ToolTip/p4.svg" style="float:right;margin-left:12px;" alt="" />
                                <b><strong>Cual es tu descripción?</strong></b><br /><br />
                                Este campo es obligatorio. Aquí debes ingresar una descripción.
                            </div>
                        </div>
                    </div>




                </td>
                <td>
                    <div class="input-control text size4">
                        @Html.EditorFor(model => model.Imagen_descripcion)
                        @Html.ValidationMessageFor(model => model.Imagen_descripcion)
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    

                    <div style="margin: auto; width: auto;">

                        <strong onmouseover="tooltip.pop(this, '#Imagen', { sticky: true })">
                            Imagen
                        </strong>

                        <div style="display:none;">
                            <div id="Imagen">
                                <img src="~/images/ToolTip/p4.svg" style="float:right;margin-left:12px;" alt="" />
                                <b><strong>Cual es tu Imagen?</strong></b><br /><br />
                                Este campo es obligatorio. Aquí debes ingresar una Imagen.
                            </div>
                        </div>
                    </div>



                </td>
                <td>

                    <div class="input-control file">
                        <input id="Imagen_url" name="Imagen_url" type="file" required  message="Error Usted no selecciono el archivo [image/jpeg]" />
                        <button class="btn btn-file"></button>
                        @Html.ValidationMessageFor(model => model.Imagen_url)
                    </div>

                </td>
            </tr>
            <tr>
                <td>
                    
                    <div style="margin: auto; width: auto;">

                        <strong onmouseover="tooltip.pop(this, '#Categoria', { sticky: true })">
                            Categoría
                        </strong>

                        <div style="display:none;">
                            <div id="Categoria">
                                <img src="~/images/ToolTip/p4.svg" style="float:right;margin-left:12px;" alt="" />
                                <b><strong>Cual es tu categoría?</strong></b><br /><br />
                                Este campo es obligatorio. Aquí debes ingresar una categoría.
                            </div>
                        </div>
                    </div>





                </td>
                <td>
                    <div class="input-control select size4">
                        @Html.DropDownList("cat_ID", ".:Categoría:.")
                        @Html.ValidationMessageFor(model => model.cat_ID)
                    </div>
                </td>
            </tr>
        </table>

        <br />

        <div class="form-actions no-color">
            <table style="background-color:transparent;">
                <tr>
                    <td><input type="submit" value="Crear" class="button large primary" /> |</td>
                    <td><h4>@Html.ActionLink("Regresar", "Index")</h4></td>
                </tr>
            </table>
        </div>
    }

</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
