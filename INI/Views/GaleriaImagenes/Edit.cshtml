@model INI.Models.DataBase.tblGaleriaImagenes

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_InvEditor.cshtml";
}

<div class="divMetas">
    <p>
        <h2>
            Editar Imagen.
        </h2>
    </p>




    @using (Html.BeginForm("Edit", "GaleriaImagenes", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Imagen_ID)
        <hr />

        <table border="0">

            <tr>
                <td><div class="span3">Título</div></td>
                <td>
                    <div class="input-control text size4">
                        @Html.EditorFor(model => model.Imagen_titulo)
                        @Html.ValidationMessageFor(model => model.Imagen_titulo)
                    </div>
                </td>
            </tr>

            <tr>
                <td><div class="span3">Descripción</div></td>
                <td>
                    <div class="input-control text size4">
                        @Html.EditorFor(model => model.Imagen_descripcion)
                        @Html.ValidationMessageFor(model => model.Imagen_descripcion)
                    </div>
                </td>
            </tr>
            <tr>
                <td><div class="span3">Imagen</div></td>
                <td>
                    <div class="input-control file">
                        <input id="Imagen_url" name="Imagen_url" type="file" />
                        <button class="btn btn-file"></button>
                        @Html.ValidationMessageFor(model => model.Imagen_url)
                    </div>

                </td>
            </tr>
            <tr>
                <td><div class="span3">Categoría</div></td>
                <td>
                    <div class="input-control select size4">
                        @Html.DropDownList("cat_ID", ".:Categoría:.")
                        @Html.ValidationMessageFor(model => model.cat_ID)
                    </div>
                </td>
            </tr>
        </table>
        <br />
        <div class="form-actions no-color">
            <table style="background-color:transparent;">
                <tr>
                    <td><input type="submit" value="Guardar" class="button large primary" /> |</td>
                    <td><h4>@Html.ActionLink("Regresar", "Index")</h4></td>
                </tr>
            </table>
        </div>


    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
