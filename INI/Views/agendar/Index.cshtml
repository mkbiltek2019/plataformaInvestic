@model IEnumerable<INI.Models.DataBase.tblProgramaTareasContratista>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_InvSeguimiento.cshtml";
}

<h2>Informacion</h2>


<table id="mitabla" class="table striped hover">
    <thead>
        <tr>
            <th>Nombre Tarea</th>
            <th>Descripción Tarea</th>
            <th>Fecha Inicial</th>
            <th>Fecha Final</th>
            <th>Estado</th>            
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha_Ini)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha_Fin)
                </td>
                <td>
                    @if (item.Estado == 1)
                    {                       
                        <img src="~/images/SEG/img_semaforo_amarillo.png" />                
                  
                    }
                    @if (item.Estado == 2)
                    {
                        <img src="~/images/SEG/img_semaforo_verde.png" />

                    }
                    @if (item.Estado == 3)
                    {
                        <img src="~/images/SEG/img_semaforo_rojo.png" />

                    }


           
                <td>
                    @Html.ActionLink("Seleccionar", "Create","actividad", new { id = item.Id },null)                  
                   
                </td>
            </tr>
        }
    </tbody>

</table>

@section Scripts {

    <script src="~/Scripts/jquery-ui-1.11.1.js"></script>
    <script src="~/Scripts/DataTables-1.10.4/jquery.dataTables.js"></script>
    <script src="~/Scripts/Investic/seg-0.1-mitabla.js"></script>
    <link href="~/Content/themes/base/all.css" rel="stylesheet" />

    @Scripts.Render("~/bundles/jqueryval")
}
