@model INI.Models.DataBase.tblHerramientasRecoleccionInformacion

@{
    ViewBag.Title = "Crear";
    Layout = "~/Views/Shared/_InvEditor.cshtml";
}
<br /><br /><br />
<h2>Crear</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal"><br /><br /><br />
        <h4>Herramientas de recolección de información</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
           Nombre de Recolección de información:
            <div class="col-md-10">
                @Html.EditorFor(model => model.HerramientaRecoleccion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.HerramientaRecoleccion, String.Empty, new { @style = "color:red;!important" }
)
            </div>
        </div>

        <div class="form-group">
            Descripción del ítem:
            <div class="col-md-10">
                @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Descripcion, String.Empty, new { @style = "color:red;!important" }
)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Crear nuevo ítem" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar al listado", "Index")
</div>
