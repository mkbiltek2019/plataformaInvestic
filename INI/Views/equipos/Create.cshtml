@model INI.Models.DataBase.tblEquiposTrabajo

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_InvSeguimiento.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m=>m.Id_Coordinador)    
    
    
    
    
        <h4>Nuevo Equipo</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="grid fluid">

            <div class="row">
                <div class="span2">
                    <strong>Nombre Equipo</strong>
                </div>
                <div class="span4 input-control text">
                    @Html.TextBoxFor(m => m.Nombre_Equipo)
                    @Html.ValidationMessageFor(m => m.Nombre_Equipo)

                    <button class="btn btn-clear"></button>
                </div>

            </div>

            <div class="row">
                <div class="span2">
                   <strong>Coordinador</strong>
                </div>
                <div class="span2 input-control select">
                    @Html.DropDownList("Nombre_Coordinador")
                </div>


            </div>

            <div class="row">
                <div class="span2">

                </div>
                <div class="span2">
                    <input type="submit" class="btn large bg-darkBlue fg-white" value="Crear Equipo" />
                </div>


            </div>



        </div>




   

       

      

    

}

<div>
    @Html.ActionLink("Regresar", "Index")
</div>

