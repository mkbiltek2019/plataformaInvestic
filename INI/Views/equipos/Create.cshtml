            $(function () {
                $('#Id_Coordinador').change(function () {
                    $.getJSON('/equipos/ListaNombre/' + $(this).options[$('#Id_Coordinador').selectedIndex], function (data) {
                        var items = '<option>Selecccione</option>';
                        $.each(data, function (i, nombres) {
                            items += "<option>" + nombres.Value + "</option>";
                        });
                        $('#Nombres').html(items);
                    });
                });


            });
        </script>


