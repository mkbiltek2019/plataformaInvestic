@model INI.Models.DataBase.tblProductosContratista

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_InvSeguimiento.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "produto", FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id_Contratista)



        <div class="form-group">
            @Html.LabelFor(model => model.Id_Actividad, "Id_Actividad", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Id_Actividad", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Id_Actividad, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Producto</label>
            <div class="input-control file">
                <input id="Nombre_Producto" name="Nombre_Producto" type="file" />
                <button class="btn btn-file"></button>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
