@model INI.Models.DataBase.tblCategoriaImagenes

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_InvEditor.cshtml";
}

<div class="divMetas">
    <p>
        <h2>
            Deatlles de Categoría.
        </h2>
    </p>


    <hr />
    <dl class="dl-horizontal">
        <dt>
            Categoría
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cat_Nombre)
        </dd>
        <dt>
            Imagen de portada
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cat_Imagen_Portada)
        </dd>

    </dl>

    <div class="form-actions no-color">
        <table style="background-color:transparent;">
            <tr>
                <td><h4>@Html.ActionLink("Editar", "Edit", new { id = Model.cat_ID }) |</h4></td>
                <td><h4>@Html.ActionLink("Regresar", "Index")</h4></td>
            </tr>
        </table>
    </div>

</div>
