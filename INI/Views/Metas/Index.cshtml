@model IEnumerable<INI.Models.DataBase.tblMeta>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_InvEditor.cshtml";
}

<div class="divMetas">
    <p>
        <h3>
            @Html.ActionLink("Nueva Meta", "Create")
        </h3>
    </p>
    <br />
    <p>
        <h3>
            <strong>
                Investigación
            </strong>
        </h3>
    </p>
    <table id="Tabla_1" class="table striped hover" style="width:100%">
        <thead>
            <tr>
                <td>
                    Municipio
                </td>
                <td>
                    Grupos Estudiantiles
                </td>
                <td>
                    N° Estudiantes
                </td>
                <td>
                    Grupos de Docentes
                </td>
                <td>
                    N° Docentes
                </td>

                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.tblMunicipios.NombreMunicipio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.met_grupoInvestigacionEstudiantil)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.met_estudianteInvestigando)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.met_grupoInvestigacionDocente)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.met_docenteInvestigando)
                    </td>

                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.tblMeta_ID }) |
                        @Html.ActionLink("Ver", "Details", new { id = item.tblMeta_ID }) |
                        @Html.ActionLink("Borrar", "Delete", new { id = item.tblMeta_ID })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <br />
    <p>
        <h3>
            <strong>
                Formación en las TIC
            </strong>
        </h3>
    </p>
    <table id="Tabla_2" class="table striped hover" style="width:100%">
        <thead>
            <tr>
                <td width="14%">
                    Municipio
                </td>
                <td>
                    Sedes Educativas
                </td>
                <td>
                    N° Padres 40H
                </td>
                <td>
                    N° Estudiantes 40H
                </td>
                <td>
                    N° Docentes 120H
                </td>
                <td>
                    N° Estudiantes 180H
                </td>
                <td>
                    N° Docentes 180H
                </td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.tblMunicipios.NombreMunicipio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.met_establecimientosEducativos)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.met_padresFormados40)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.met_estudiantesFormados40)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.met_docentesFormados120)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.met_estudiantesFormados180)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.met_docentesFormados180)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.tblMeta_ID }) |
                        @Html.ActionLink("Ver", "Details", new { id = item.tblMeta_ID }) |
                        @Html.ActionLink("Borrar", "Delete", new { id = item.tblMeta_ID })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts{
    <script src="~/Scripts/DataTables-1.10.4/jquery.dataTables.js"></script>
    <script>
        $(function () {
            $('#Tabla_1').dataTable({
                "sPaginationType": "full_numbers",
                "oLanguage": {
                    "sUrl": "../../Lang/es-CO.txt"
                }
            });


            $(function () {
                $('#Tabla_2').dataTable({
                    "sPaginationType": "full_numbers",
                    "oLanguage": {
                        "sUrl": "../../Lang/es-CO.txt"
                    }
                });

            });
        });

    </script>
}