@model bool?
@using System.Web.Mvc

@{
    var selectList = new List<SelectListItem>();
    selectList.Add(new SelectListItem { Text = "[Seleccionar]", Value = "", Selected = !Model.HasValue });
    selectList.Add(new SelectListItem { Text = "Si", Value = "true", Selected = Model.HasValue && Model.Value });
    selectList.Add(new SelectListItem { Text = "No", Value = "false", Selected = Model.HasValue && !Model.Value });
}

@Html.DropDownListFor(model => model, selectList, new { @class = "form-control list-box tri-state" })
