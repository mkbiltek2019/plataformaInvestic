@using Microsoft.AspNet.Identity
@using INI.Models.DataBase

@{
    ViewBag.Title = "_InvIEP";
    Layout = "~/Views/Shared/_LayoutInvestic.cshtml";
    
}

@section Submenu{
    <img src="~/images/logosSecciones/logo_seguimiento.png" style="margin:0; float: left;" />
    <div id="titulosmenusec" style="color: #BDBDBD"> Seguimiento</div>

    @if (AspNetUsersRoles.IsUserInRole("Administrador", User.Identity.Name))
    {
        <div><a id="btnmenusec" href="/Seguimiento/RegistroAdmin">Registrar Usuarios</a></div>
        <div><a id="btnmenusec" href="/equipos/Create">Crear Equipo</a></div>
        <div><a id="btnmenusec" href="/cargo/Create">Crear Cargos</a></div>
    }
    @if (AspNetUsersRoles.IsUserInRole("Coordinador", User.Identity.Name))
    {
        <div><a id="btnmenusec" href="/Seguimiento/RegistroAdmin">Registrar Coontratista</a></div>
        <div><a id="btnmenusec" href="/Contrato/Seleccionar">Datos Contrato</a></div>
        <div><a id="btnmenusec" href="/contractual/Create">Asignar Responsabilidades</a></div>
        <div><a id="btnmenusec" href="/agendar/Seleccionar">Agendar Tarea</a></div>
        <div><a id="btnmenusec" href="/Usuarios/Index">Usuarios</a></div>
    }
    @if (AspNetUsersRoles.IsUserInRole("Contratista", User.Identity.Name))
    {
        <div><a id="btnmenusec" href="/agendar">Actividades</a></div>
        <div><a id="btnmenusec" href="/Reporte/Reporte">Reportes</a></div>
    }
    <div style="padding-bottom:15px;padding-top:14px;margin:0; color:#E5E5E5;"></div>
}

<div class="container">
    @RenderBody()
</div>

@section Script{
    @RenderSection("scripts", required: false)
}