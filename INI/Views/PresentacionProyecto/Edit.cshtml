                                @Html.DisplayFor(m => m.tblProyectosInvestigacion_Rev3.tblPresentacionProyecto_Rev.preProy_tituloProy)
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            @*Estructura de resumen*@
