@model IEnumerable<INI.Models.DataBase.MisGrupos>
@*@model List<INI.Models.DataBase.tblProyectosInvestigacion>*@
@using INI.Models.DataBase


@{
    ViewBag.Title = "Resultados de busqueda";
    Layout = "~/Views/Shared/_InvInvestiga.cshtml";
    investicEntities db = new investicEntities();
}
    <div class="row" style="position: fixed; top: 95px; font-family:Chewy; color:#FFEB3B; font-size:22pt; text-align:center;">Estudiantes Investigando</div>
    <div style="overflow-y:auto;position: fixed; top: 140px; background: url('../../images/fondosCapas/bg_estudiantesInvestigando_Resultados.png') no-repeat; padding: 10px 50px 10px 75px; height:490px; width:900px;">
    <h4>@Html.ActionLink("Regresar", "BusquedaEstudiantesInvestigando")</h4>
    <div>
        <table id="misGrupos" class="table striped hover">
            <thead>
                <tr>
                    <th class="span2"></th>
                    <th class="span2">Imagen</th>
                    <th class="span8">Descripción</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">
                            @*@Html.ActionLink("Ir al Proyecto", "VisualizarGrupoEstudiantes", "Home", new { idGrupoInvestigacion = item.id }, new { @class = "button info" })*@
                            <a href="~/Home/VisualizarGrupoEstudiantes?idGrupoInvestigacion=@item.id">Ver Grupo</a>
                        </td>
                        <td class="text-center">
                            <img src="~/images/Avatars/@item.Avatar" width="96" height="96" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Informacion, "InfoGrupo")
                        </td>
                    </tr>
                }
            </tbody>
        </table>



    </div>
</div>

    <div class="row" style="position:fixed; bottom: 50px; right:200px;">
    <img src="~/images/otros/lapiz.png" />
</div>
@section scripts{
    <script src="~/Scripts/DataTables-1.10.3/media/js/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/Investic/iep-0.1-index.js"></script>
}
