<h2 id="titlesection">Conócenos</h2>
<ul data-role="listview">
    <li>@Html.ActionLink("¿Quiénes Sómos?", "Conocenos", "Home")</li>
    <li>@Html.ActionLink("Aspectos Generales", "General", "Home")</li>
    <li>@Html.ActionLink("Equipos de Trabajo", "EquiposTrabajo", "Home")</li>
