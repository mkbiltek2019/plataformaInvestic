@model INI.Models.DataBase.tblTituloEducacionSuperior

@{
    Layout = "~/Views/Shared/_InvCuenta.cshtml";
    ViewBag.Title = "Modificar Titulo";
}

<div class="verticalSpan2"></div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.tblTituloEducacionSuperior_ID)
    @Html.Hidden("tblHojaVida_ID", (object)ViewBag.idHojaVida)

    <div class="text-center">
        <h2><strong>Modificar Titulo</strong></h2>
    </div>

    <div class="form-control grid" style="text-align:center">
        <hr />

        <div class="form-group span6 offset4 text-center">
            <h3><strong>Titulo Educación Superior</strong></h3>
            <div class="input-control text" data-role="input-control">
                @Html.EditorFor(model => model.titEduSup_nombre)
                <button type="button" class="btn btn-clear" tabindex="-1"></button>
                @Html.ValidationMessageFor(model => model.titEduSup_nombre)
            </div>
        </div>

        <div class="form-group span6 offset4 text-center">
            <h3><strong>Fecha de Graduación</strong></h3>
            <div class="input-control text" data-role="datepicker" data-format="dd/mm/yyyy">
                @Html.TextBoxFor(m => m.titEduSup_anoGraduacion, "{0:dd/MM/yyyy}")
                <button class="btn btn-date" type="button"></button>
                @Html.ValidationMessage("Digite fecha de graduación")
            </div>
        </div>

        <div class="form-group span6 offset4 text-center">
            <h3><strong>Nivel Académico</strong></h3>
            <div class="input-control select">
                @Html.DropDownList("tblNivelAcademicoEducacionSuperior_ID")
                @Html.ValidationMessageFor(model => model.tblNivelAcademicoEducacionSuperior_ID)
            </div>
        </div>
        <button class="large bg-green fg-white" type="submit">
            Guardar Cambios
            <i class="icon-upload-3 bg-green fg-white"></i>
        </button>

        <div class="form-group">
            <h3>
                @Html.ActionLink("Regresar", "FormacionYExperiencia", new { id = (object)ViewBag.idUsuarioPlataforma })
            </h3>
        </div>
    </div>
}

