@model INI.Models.DataBase.tblHojaVida
@using INI.Models.DataBase

@{
    Layout = "~/Views/Shared/_InvCuenta.cshtml";
    ViewBag.Title = "Modificar Hoja de Vida";
}

<div class="verticalSpan2"></div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.tblHojaVida_ID)
    @Html.HiddenFor(model => model.tblUsuarioPlataforma_ID)

    <div class="text-center">
        <h2><strong>Modificar Información Educación Basica</strong></h2>
    </div>

    <div class="form-control grid" style="text-align:center">

        <h2><strong>@Html.DisplayName(AspNetUsers.GetName(Model.AspNetUsers.UserName))</strong></h2>
        @*<h3>@Html.DisplayFor(model => model.tblUsuarioPlataforma.usuPla_nombre)</h3>*@
        <hr />

        <div class="form-group span6 offset4 text-center">
            <h3><strong>Titulo Educación Secundaria</strong></h3>
            <div class="input-control text" data-role="input-control">
                @Html.EditorFor(model => model.hojVid_tituloSecundaria)
                <button type="button" class="btn btn-clear" tabindex="-1"></button>
                @Html.ValidationMessageFor(model => model.hojVid_tituloSecundaria)
            </div>
        </div>

        <div class="form-group span6 offset4 text-center">
            <h3><strong>Año de Graduación</strong></h3>
            <div class="input-control text" data-role="datepicker" data-format="dd/mm/yyyy">
                @Html.TextBoxFor(m => m.hojVid_anoGradoSecundaria, "{0:dd/MM/yyyy}")
                <button class="btn btn-date" type="button"></button>
                @Html.ValidationMessage("Digite fecha")
            </div>
        </div>

        <button class="large bg-green fg-white" type="submit">
            Guardar Cambios
            <i class="icon-upload-3 bg-green fg-white"></i>
        </button>
        <div class="form-group">
            <h3>
                @Html.ActionLink("Regresar", "FormacionYExperiencia", new { id = Model.tblUsuarioPlataforma_ID })
            </h3>
        </div>
    </div>
}
