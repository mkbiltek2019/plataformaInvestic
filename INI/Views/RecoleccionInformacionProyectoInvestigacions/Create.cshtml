@model INI.Models.DataBase.tblRecoleccionInformacionProyectoInvestigacion

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_InvEditor.cshtml";
}

<br /><br /><br />
<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal"><br /><br /><br />
        <h4>Recolección Información Proyecto Investigación</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.idGrupoInvestigacion, "Grupo Investigación", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("idGrupoInvestigacion", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idGrupoInvestigacion, String.Empty, new { @style = "color:red;!important" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.idInstrumento, "Instrumento", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("idInstrumento", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idInstrumento, String.Empty, new { @style = "color:red;!important" })
            </div>
        </div>

        <div class="form-group">
            Nombre de la evidencia:
            <div class="col-md-10">
                @Html.EditorFor(model => model.Evidencia, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Evidencia, String.Empty, new { @style = "color:red;!important" })
            </div>
        </div>

        <div class="form-group">
            Descripción de la evidencia:
            <div class="col-md-10">
                @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Descripcion, String.Empty, new { @style = "color:red;!important" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Crear nuevo ítem" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar al listado", "Index")
</div>
